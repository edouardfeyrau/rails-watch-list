<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://chloejohnston.com/wp-content/uploads/2015/01/paris-cin%C3%A9ma1.jpg')">
  <div class="container">
    <h1>Save <strong>any</strong> kind of movies !</h1>
    <p>Classic</p>
  </div>
</div>


<div class="card-title">
  <h3>My lists</h3>
  <%= link_to new_list_path do%><button class="btn btn-success">Create a movie list</button> <% end %>
</div>

<div class="cards card-index">
  <% @lists.each do |list| %>
    <div class="card-category card-category-index" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <div class="card-text-index"><%= link_to list.name, list_path(list) %></div>
    </div>
  <% end %>
</div>
